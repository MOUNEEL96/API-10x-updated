<html>
    <head>
        <style>
            table {
                font-family: Arial, Helvetica, sans-serif;
                border-collapse: collapse;
                width: 100%;
            }
            td, th {
                border: 1px solid gray;
                text-align: left;
                padding: 10px;
            }
            tr:nth-child(even) {
                background-color: white;
            }
        </style>
    </head>
    <body>
        <div>
            <h1>Inventory Table</h1>
  <style>
    h1{
        margin-left: 600px;
    }
  </style>

            <table>
                <tr>
                    <th>Inventory_Id</th>
                    <th>Inventory_Type</th>
                    <th>Item name</th>
                    <th>Available quantity</th>
                    
                </tr>
                
                <% inventoryData.forEach(inventorydata => { %>
                    <tr>
                       <td><%= inventorydata.inventory_id %> </td>
                       <td><%= inventorydata.inventory_type %></td>
                       <td><%= inventorydata.item_name %> </td>
                       <td><%= inventorydata.available_quantity %> </td>
                       
                    </tr>
                  
                   <% }) %>
            </table>
            
        </div>
    </body>
</html>



